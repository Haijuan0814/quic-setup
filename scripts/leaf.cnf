SUBJECT_NAME = req_dn
KEY_SIZE = 2048

[req]
default_bits       = ${ENV::KEY_SIZE}
default_md         = sha256
string_mask        = utf8only
prompt             = no
encrypt_key        = no
distinguished_name = ${ENV::SUBJECT_NAME}
req_extensions     = req_extensions

[req_dn]
C  = CA
ST = Alberta
L  = Edmonton
O  = UofA
CN = www.example-tcp.org

[req_extensions]
subjectAltName = @other_hosts

[other_hosts]
DNS.1 = www.example-tcp.org
DNS.2 = mail.example-tcp.org
DNS.3 = mail.example-tcp.com
IP.1 = 127.0.0.1
IP.2 = 192.168.1.1

